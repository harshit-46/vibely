    <main class="max-w-3xl mx-auto px-4 py-8">
        <section class="mb-8">
            <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6">
                <div class="flex items-center gap-3 mb-4">
                    <div
                        class="w-10 h-10 rounded-full bg-zinc-700 flex items-center justify-center text-sm font-semibold">
                        <%= user.username.charAt(0).toUpperCase()%>
                    </div>
                    <a href="/createpost"
                        class="flex-1 bg-zinc-800 hover:bg-zinc-700 text-zinc-400 hover:text-white py-3 px-4 rounded-lg transition duration-200 text-sm cursor-pointer">
                        What's on your mind?
                    </a>
                </div>
                <div class="flex items-center justify-end">
                    <a href="/createpost"
                        class="inline-flex items-center gap-2 bg-zinc-800 hover:bg-zinc-700 text-white font-medium py-2 px-5 rounded-lg transition duration-200 text-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        New Post
                    </a>
                </div>
            </div>
        </section>
        <section>
            <h2 class="text-lg font-semibold mb-4 text-zinc-300">Recent Posts</h2>
            <div class="space-y-4">
                <% if (posts.length===0) { %>
                    <p class="text-zinc-500 text-center">No posts yet</p>
                    <% } %>
                        <% posts.forEach(post=> { %>
                            <article
                                class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 hover:border-zinc-700 transition duration-200">
                                <div class="flex items-start justify-between mb-4">
                                    <div class="flex items-center gap-3">
                                        <a href="/profile/<%= post.userId.user %>">
                                            <div
                                                class="w-11 h-11 rounded-full bg-gradient-to-br from-blue-600 to-blue-700 flex items-center justify-center text-sm font-semibold">
                                                <%= post.userId.username.charAt(0).toUpperCase() %>
                                            </div>
                                        </a>
                                        <div>
                                            <h4 class="font-semibold text-sm text-white">
                                                @<%= post.userId.username %>
                                            </h4>
                                            <small class="text-zinc-500 text-xs">
                                                <%= post.createdAt.toDateString() %>
                                            </small>
                                        </div>
                                    </div>
                                    <button class="text-zinc-500 hover:text-zinc-300 transition">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                            <path
                                                d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" />
                                        </svg>
                                    </button>
                                </div>
                                <div class="mb-4">
                                    <p class="text-zinc-200 text-sm leading-relaxed mb-3">
                                        <%= post.content %>
                                    </p>
                                    <% if (post.imageUrl) { %>
                                        <div class="rounded-lg overflow-hidden bg-zinc-800 border border-zinc-700">
                                            <img src="<%= post.imageUrl %>" alt="post image"
                                                class="w-full object-cover">
                                        </div>
                                        <% } %>
                                </div>
                                <div class="flex items-center gap-6 pt-3 border-t border-zinc-800">
                                    <button
                                        class="flex items-center gap-2 text-zinc-500 hover:text-zinc-300 transition text-sm cursor-pointer">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                        </svg>
                                        <span>Like</span>
                                    </button>
                                    <a href="/post/<%= post._id%>" class="flex items-center gap-2 text-zinc-500 hover:text-zinc-300 transition text-sm cursor-pointer">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                        </svg>
                                        <span>Comment</span>
                                    </a>
                                </div>
                            </article>
                            <% }) %>
            </div>
        </section>
    </main>
