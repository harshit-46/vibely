<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/vibely-logo.png">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Vibely</title>
</head>
<body class="bg-zinc-950 text-white min-h-screen">
    <!-- Header -->
    <header class="sticky top-0 z-50 border-b border-zinc-800 bg-zinc-950/95 backdrop-blur-sm">
        <div class="max-w-5xl mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <!-- Back Button & Title -->
                <div class="flex items-center gap-4">
                    <a href="/" class="text-zinc-400 hover:text-white transition">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                    </a>
                    <h1 class="text-xl font-semibold">Search Users</h1>
                </div>
                
                <!-- Actions -->
                <div class="flex items-center gap-3">
                    <a href="/" 
                        class="text-zinc-400 hover:text-white font-medium transition duration-200 text-sm">
                        Home
                    </a>
                    <a href="/profile" 
                        class="text-zinc-400 hover:text-white font-medium transition duration-200 text-sm">
                        Profile
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-3xl mx-auto px-4 py-8">
        <!-- Search Section -->
        <section class="mb-8">
            <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6">
                <form action="/search" method="GET" onsubmit="return false;" class="space-y-4">
                    <!-- Search Input -->
                    <div class="relative">
                        <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <input 
                            type="text" 
                            id="searchInput"
                            name="query"
                            placeholder="Search by username or name..." 
                            class="w-full bg-zinc-800 border border-zinc-700 rounded-lg pl-12 pr-4 py-3 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition"
                        >
                    </div>

                    <!-- Filter Options -->
                    <div class="flex items-center gap-3 flex-wrap">
                        <span class="text-sm text-zinc-400">Filter by:</span>
                        <button 
                            type="button"
                            class="filter-btn active bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm transition"
                        >
                            All Users
                        </button>
                        <button 
                            type="button"
                            class="filter-btn bg-zinc-800 hover:bg-zinc-700 text-zinc-300 px-4 py-2 rounded-lg text-sm transition"
                        >
                            Following
                        </button>
                        <button 
                            type="button"
                            class="filter-btn bg-zinc-800 hover:bg-zinc-700 text-zinc-300 px-4 py-2 rounded-lg text-sm transition"
                        >
                            Followers
                        </button>
                        <button 
                            type="button"
                            class="filter-btn bg-zinc-800 hover:bg-zinc-700 text-zinc-300 px-4 py-2 rounded-lg text-sm transition"
                        >
                            Suggested
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Search Results -->
        <section>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-zinc-300">
                    <span id="resultsCount"><span><%= users.length %></span>
                </span> Users Found
                </h2>
                <select class="bg-zinc-800 border border-zinc-700 rounded-lg px-3 py-2 text-sm text-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-600">
                    <option>Sort by: Relevance</option>
                    <option>Most Followers</option>
                    <option>Most Posts</option>
                    <option>Recently Joined</option>
                </select>
            </div>

            <div class="space-y-3" id="resultsContainer">
                <!-- User Card 1 -->
                <% users.forEach(user => { %>
                    <article class="bg-zinc-900 border border-zinc-800 rounded-xl p-5">
                        <div class="flex items-center justify-between">
                            
                            <div class="flex items-center gap-4">
                                <!-- Avatar -->
                                <a href="/profile/<%= user.username%>">
                                    <div class="w-14 h-14 rounded-full bg-blue-600 flex items-center justify-center font-semibold">
                                        <%= user.username.slice(0,2).toUpperCase() %>
                                    </div>
                                </a>
                
                                <!-- Info -->
                                <div>
                                    <h3 class="font-semibold"><%= user.name %></h3>
                                    <p class="text-sm text-zinc-400">@<%= user.username %></p>
                                    <p class="text-xs text-zinc-500"><%= user.bio %></p>
                                </div>
                            </div>
                
                            <button class="follow-btn bg-blue-600 px-5 py-2 rounded-lg">
                                Follow
                            </button>
                
                        </div>
                    </article>
                <% }) %>                
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="max-w-5xl mx-auto px-6 py-8 mt-12 border-t border-zinc-800">
        <div class="flex items-center justify-between text-sm">
            <p class="text-zinc-500">Â© 2025 Your App</p>
            <div class="flex items-center gap-6">
                <a href="/about" class="text-zinc-400 hover:text-white transition">About</a>
                <a href="/terms" class="text-zinc-400 hover:text-white transition">Terms</a>
                <a href="/privacy" class="text-zinc-400 hover:text-white transition">Privacy</a>
            </div>
        </div>
    </footer>
<script>
    const searchInput = document.getElementById("searchInput");
    const resultsContainer = document.getElementById("resultsContainer");
    const resultsCount = document.getElementById("resultsCount");
    
    let timeout;
    
    searchInput.addEventListener("input", () => {
        clearTimeout(timeout);
    
        timeout = setTimeout(async () => {
            const query = searchInput.value.trim();
    
            const res = await fetch(`/api/search?query=${query}`);
            const users = await res.json();
    
            resultsContainer.innerHTML = "";
            resultsCount.textContent = users.length;
    
            if (users.length === 0) {
                resultsContainer.innerHTML = `
                    <p class="text-zinc-500 text-center">No users found</p>
                `;
                return;
            }
    
            users.forEach(user => {
                resultsContainer.innerHTML += `
                    <article class="bg-zinc-900 border border-zinc-800 rounded-xl p-5">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-4">
                                <a href="/profile/${user.username}">
                                    <div class="w-14 h-14 rounded-full bg-blue-600 flex items-center justify-center font-semibold">
                                        ${user.username.slice(0,2).toUpperCase()}
                                    </div>
                                </a>
                                <div>
                                    <h3 class="font-semibold">${user.name}</h3>
                                    <p class="text-sm text-zinc-400">@${user.username}</p>
                                    <p class="text-xs text-zinc-500">${user.bio || ""}</p>
                                </div>
                            </div>
                            <button class="follow-btn bg-blue-600 px-5 py-2 rounded-lg">
                                Follow
                            </button>
                        </div>
                    </article>
                `;
            });
        }, 300);
    });
    </script>
</body>
</html>