<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/vibely-logo.png">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Vibely</title>
</head>
<body>
    <div class="min-h-screen bg-zinc-900 flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <!-- Register Card -->
            <div class="bg-zinc-800 border border-zinc-700 rounded-lg shadow-lg p-8">
                <!-- Header -->
                <div class="mb-8">
                    <h1 class="text-2xl font-semibold text-white mb-1">
                        Create an account
                    </h1>
                    <p class="text-zinc-400 text-sm">Please enter your details to sign up</p>
                </div>

                <!-- Form -->
                <form action="/register" method="post" class="space-y-5">
                    <!-- Username Input -->
                    <div class="space-y-2">
                        <label for="username" class="block text-sm font-medium text-zinc-300">
                            Username
                        </label>
                        <input 
                            type="text" 
                            id="username"
                            name="username"
                            placeholder="Choose a username" 
                            required 
                            class="w-full bg-zinc-900 border border-zinc-700 text-white placeholder-zinc-500 rounded-md px-4 py-2.5 outline-none focus:border-blue-500 transition"
                        >
                    </div>


                    <div class="space-y-2">
                        <label for="email" class="block text-sm font-medium text-zinc-300">
                            Name
                        </label>
                        <input 
                            type="text" 
                            id="name"
                            name="name"
                            placeholder="Enter your name" 
                            required 
                            class="w-full bg-zinc-900 border border-zinc-700 text-white placeholder-zinc-500 rounded-md px-4 py-2.5 outline-none focus:border-blue-500 transition"
                        >
                    </div>


                    <div class="space-y-2">
                        <label for="email" class="block text-sm font-medium text-zinc-300">
                            Email
                        </label>
                        <input 
                            type="email" 
                            id="email"
                            name="email"
                            placeholder="Enter your email" 
                            required 
                            class="w-full bg-zinc-900 border border-zinc-700 text-white placeholder-zinc-500 rounded-md px-4 py-2.5 outline-none focus:border-blue-500 transition"
                        >
                    </div>

                    <!-- Password Input -->
                    <div class="space-y-2">
                        <label for="password" class="block text-sm font-medium text-zinc-300">
                            Password
                        </label>
                        <input 
                            type="password" 
                            id="password"
                            name="password"
                            placeholder="Create a password" 
                            required 
                            class="w-full bg-zinc-900 border border-zinc-700 text-white placeholder-zinc-500 rounded-md px-4 py-2.5 outline-none focus:border-blue-500 transition"
                        >
                    </div>

                    <!-- Confirm Password Input -->
                    <div class="space-y-2">
                        <label for="confirm-password" class="block text-sm font-medium text-zinc-300">
                            Confirm Password
                        </label>
                        <input 
                            type="password" 
                            id="confirm-password"
                            name="confirm-password"
                            placeholder="Confirm your password" 
                            required 
                            class="w-full bg-zinc-900 border border-zinc-700 text-white placeholder-zinc-500 rounded-md px-4 py-2.5 outline-none focus:border-blue-500 transition"
                        >
                    </div>

                    <!-- Submit Button -->
                    <button 
                        type="submit" 
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-4 rounded-md transition"
                    >
                        Create account
                    </button>
                </form>

                <!-- Login Link -->
                <div class="mt-6 text-center">
                    <span class="text-zinc-400 text-sm">Already have an account? </span>
                    <a href="/" class="text-blue-400 hover:text-blue-300 font-medium text-sm transition">
                        Sign in
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>